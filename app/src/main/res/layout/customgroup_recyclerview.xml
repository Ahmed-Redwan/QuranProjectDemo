<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="@dimen/_160sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background= "#E3E9EF"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    >
<androidx.cardview.widget.CardView
    android:layout_width="@dimen/_130sdp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_20sdp"
    >
    <RelativeLayout
        android:layout_width="@dimen/_130sdp"
        android:layout_height="wrap_content"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:id="@+id/CustomGroup_iv_Image"
            android:src="@drawable/sheikh"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            app:riv_corner_radius="30dip"
            app:riv_border_width="@dimen/_1sdp"
            app:riv_border_color="#D1D4D6"
            app:riv_oval="true"
            android:layout_gravity="start"
            app:layout_collapseMode="parallax"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:padding="@dimen/_4sdp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:orientation="vertical"
            android:layout_below="@id/CustomGroup_iv_Image"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/CustomGroup_tv_CircleName"
                android:text="أبو بكر الصديق"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_3sdp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_5sdp"
                android:shadowColor = "#D8000000"
                android:shadowDx = "-2"
                android:shadowDy = "-2"
                android:shadowRadius = "7"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/CustomGroup_tv_TeacherName"
                android:text="أحمد رضوان بشير عبد الغفور"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_2sdp"
                android:shadowColor = "#D8000000"
                android:shadowDx = "-2"
                android:shadowDy = "-2"
                android:shadowRadius = "7"/>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>


</LinearLayout>