<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:gravity="center"
        android:orientation="vertical"
        android:background= "#E3E9EF"


        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:background= "@drawable/ripple_backgeround"
                >

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:id="@+id/CustomGroup_iv_Image"
                    android:src="@drawable/person3"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="30dip"
                    app:riv_border_width="@dimen/_3sdp"
                    app:riv_border_color="#D1D4D6"
                    app:riv_oval="true"
                    android:layout_gravity="start"
                    app:layout_collapseMode="parallax"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:padding="@dimen/_4sdp"

                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_100sdp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_toEndOf="@id/CustomGroup_iv_Image"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/CustomGroup_tv_CircleName"
                        android:text="اسم الحلقة"
                        android:textSize="@dimen/_22ssp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/_5sdp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/CustomGroup_tv_TeacherName"
                        android:text="اسم المحفظ"
                        android:textSize="@dimen/_22ssp"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"/>

                </LinearLayout>



            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>