<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Add_a_new_save"
    android:orientation="vertical"
    android:background="#E3E9EF"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:text="إضافة حفظ جديد"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_26ssp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_15sdp"
        />



    <Spinner
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:id="@+id/spinner_selection_student"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"



  />




    <TextView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:text="الحفظ"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_12sdp"
         />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
         app:cardElevation="@dimen/_120sdp"
        app:cardCornerRadius="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:padding="@dimen/_5sdp"
        app:cardBackgroundColor="#D1D4D6"
                >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
             >


            <Spinner
                android:id="@+id/spinner_save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"


                />
            <Spinner
                android:id="@+id/spinner_save_from"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"


                />
            <Spinner
                android:id="@+id/spinner_save_to"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"

                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:text="المراجعة"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_12sdp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        app:cardElevation="@dimen/_120sdp"
        app:cardCornerRadius="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:padding="@dimen/_5sdp"
        app:cardBackgroundColor="#D1D4D6"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >


            <Spinner
                android:id="@+id/spinner_review"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"


                />
            <Spinner
                android:id="@+id/spinner_review_from"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"


                />
            <Spinner
                android:id="@+id/spinner_review_to"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"

                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@drawable/btn_background"
        android:text="إضافة حفظ جديد"
        android:textStyle="bold"
        android:textColor="@color/color_whigt"
        android:textSize="@dimen/_20ssp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/btn_background2"
        android:text="إلغاء"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_20ssp"
        />
</LinearLayout>