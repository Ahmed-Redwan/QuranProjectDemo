<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.registrar.Add_a_new_save"
    android:orientation="vertical"
    android:background="#E3E9EF"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:text="إضافة حفظ جديد"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_26ssp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_15sdp"
        />



      <Spinner
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:id="@+id/spinner_selection_student"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        tools:ignore="MissingClass"
          />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_50sdp"
    android:layout_marginEnd="@dimen/_50sdp">

    <TextView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:text="الحفظ"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        android:layout_margin="@dimen/_12sdp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="عدد الصفحات"
        android:textColorHint="@android:color/black"
        android:gravity="center"
        android:id="@+id/student_add_new_save_et_numOfSavePages"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:inputType="number"
        android:drawableStart="@drawable/iconfinder_no"
        android:drawablePadding="-15dp"
        />


</LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
         app:cardElevation="@dimen/_120sdp"
        app:cardCornerRadius="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:padding="@dimen/_5sdp"
        app:cardBackgroundColor="#D1D4D6"
                >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
             >


            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinner_save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinner_save_from"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"


                />
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinner_save_to"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"

                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_50sdp">

        <TextView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:text="المراجعة"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_18ssp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_12sdp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="عدد الصفحات"
            android:textColorHint="@android:color/black"
            android:id="@+id/student_add_new_save_et_numOfRevPages"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:inputType="number"
            android:drawableStart="@drawable/iconfinder_no"
            android:drawablePadding="-15dp"
            />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        app:cardElevation="@dimen/_120sdp"
        app:cardCornerRadius="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:padding="@dimen/_5sdp"
        app:cardBackgroundColor="#D1D4D6"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >


            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinner_review"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"


                />
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinner_review_from"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"


                />
            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spinner_review_to"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_weight="1"

                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <Button
        android:layout_weight="1"
        android:id="@+id/student_add_new_save_btn_addSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/btn_background"
        android:text="إضافة حفظ جديد"
        android:textStyle="bold"
        android:textColor="@color/color_whigt"
        android:textSize="@dimen/_17ssp"
        />
    <Button
        android:layout_weight="1"
        android:id="@+id/student_add_new_save_btn_addAbsence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/ripple_backgeround3"
        android:text="تسجيل غياب"
        android:textStyle="bold"
        android:textColor="@color/color_whigt"
        android:textSize="@dimen/_17ssp"
        />

</LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/btn_background2"
        android:text="إلغاء"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_20ssp"
        />
</LinearLayout>