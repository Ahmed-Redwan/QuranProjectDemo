<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/ripple_backgeround2"
    android:layout_margin="@dimen/_3sdp"

    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:background="@drawable/ripple_backgeround"
        android:layout_margin="@dimen/_3sdp"
        >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp">
            
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:id="@+id/requests_iv_student"
                android:scaleType="centerCrop"
                app:riv_corner_radius="30dip"
                app:riv_border_width="@dimen/_2sdp"
                app:riv_border_color="#D1D4D6"
                app:riv_oval="true"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/male"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/requests_tv_name"
                android:layout_toEndOf="@id/requests_iv_student"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Mustafa Muhammed Alastal"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                android:shadowColor = "#D8000000"
                android:shadowDx = "15"
                android:shadowDy = "15"
                android:shadowRadius = "15"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/requests_tv_id"
                android:layout_below="@id/requests_tv_name"
                android:layout_toEndOf="@id/requests_iv_student"
                android:text="407894561"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textStyle="bold"
                android:shadowColor = "#D8000000"
                android:shadowDx = "15"
                android:shadowDy = "15"
                android:shadowRadius = "15"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/requests_tv_birthOfDate"
                android:layout_below="@id/requests_tv_id"
                android:layout_toEndOf="@id/requests_iv_student"
                android:text="25/9/2000"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:shadowColor = "#D8000000"
                android:shadowDx = "15"
                android:shadowDy = "15"
                android:shadowRadius = "15"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/requests_tv_Email"
                android:layout_below="@id/requests_tv_birthOfDate"
                android:layout_toEndOf="@id/requests_iv_student"
                android:text="mustafa@gmail.com"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:shadowColor = "#D8000000"
                android:shadowDx = "15"
                android:shadowDy = "15"
                android:shadowRadius = "15"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/requests_tv_Grade"
                android:layout_below="@id/requests_tv_Email"
                android:layout_toEndOf="@id/requests_iv_student"
                android:text="third year university"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:shadowColor = "#D8000000"
                android:shadowDx = "15"
                android:shadowDy = "15"
                android:shadowRadius = "15"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/requests_tv_phone"
                android:layout_below="@id/requests_tv_Grade"
                android:layout_toEndOf="@id/requests_iv_student"
                android:text="0599123456"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"
                android:shadowColor = "#D8000000"
                android:shadowDx = "15"
                android:shadowDy = "15"
                android:shadowRadius = "15"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/requests_tv_phone"
    android:layout_marginTop="@dimen/_3sdp"
    android:gravity="center"
    >

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:id="@+id/requests_iv_call"
        android:src="@drawable/tel"
        android:scaleType="centerCrop"
        app:riv_corner_radius="30dip"
        app:riv_border_width="@dimen/_3sdp"
        app:riv_border_color="#D1D4D6"
        app:riv_oval="true"
        android:padding="@dimen/_4sdp"
        />
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:id="@+id/requests_iv_email"
        android:src="@drawable/ic_email_black_24dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="30dip"
        app:riv_border_color="#D1D4D6"
        app:riv_oval="true"
        android:padding="@dimen/_4sdp"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/requests_tv_accept"
    android:text="Accept"
    android:drawableStart="@drawable/ic_check_black_24dp"
    android:textSize="@dimen/_18ssp"
    android:textColor="@android:color/holo_green_dark"
    android:textStyle="bold"
    android:layout_marginStart="@dimen/_15sdp"
    android:drawableTint="@android:color/holo_green_dark"
    android:background="@drawable/ripple_backgeround2"
    android:padding="@dimen/_5sdp"
    android:shadowColor = "#D8000000"
    android:shadowDx = "15"
    android:shadowDy = "15"
    android:shadowRadius = "25"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:id="@+id/requests_tv_Refuse"
        android:text="Refuse"
        android:padding="@dimen/_5sdp"
        android:drawableStart="@drawable/ic_cancel_black_24dp"
        android:textSize="@dimen/_18ssp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:drawableTint="@android:color/holo_red_dark"
        android:background="@drawable/ripple_backgeround2"
        android:shadowColor = "#D8000000"
        android:shadowDx = "15"
        android:shadowDy = "15"
        android:shadowRadius = "20"
        />

</LinearLayout>





        </RelativeLayout>
        
    </androidx.cardview.widget.CardView>

</LinearLayout>