            android:src="@drawable/person3"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_10sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RegAs_tv_guardian"
            android:textSize="@dimen/_25ssp"
            android:padding="@dimen/_15sdp"
            android:textColor="@android:color/white"
            android:text="ولي الأمر"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            />
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/divider3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorPrimary"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="أو"
        android:id="@+id/RegAs_tv_Or"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RegAs_cvieew_AddRequest"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        app:cardElevation="@dimen/_20sdp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/_30sdp"
        >
        <ImageView
            android:layout_width="@dimen/_47sdp"
            android:layout_height="@dimen/_47sdp"
            android:src="@drawable/request_ic"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_10sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RegAs_tv_AddRequest"
            android:textSize="@dimen/_23ssp"
            android:padding="@dimen/_15sdp"
            android:textColor="@android:color/white"
            android:text="إرسال طلب إلتحاق"
            android:textStyle="bold"
            android:layout_gravity="start|center"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/_16sdp"
            />
    </androidx.cardview.widget.CardView>
