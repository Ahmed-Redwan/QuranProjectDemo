<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.RegisterAs"
    android:background="#ECF1F6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="قم بإنشاء حساب"
        android:id="@+id/RegAs_tv_MakeAnAccount"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_33ssp"
        android:textStyle="bold"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RegAs_cvieew_QuranCenter"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        app:cardElevation="@dimen/_20sdp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/_30sdp"
        >
        <ImageView
            android:layout_width="@dimen/_47sdp"
            android:layout_height="@dimen/_47sdp"
            android:src="@drawable/quran2"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_10sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RegAs_tv_QuranCenter"
            android:textSize="@dimen/_25ssp"
            android:padding="@dimen/_15sdp"
            android:textColor="@android:color/white"
            android:text="مركز التحفيظ"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/_10sdp"

            />
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorPrimary"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RegAs_cvieew_teacher"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        app:cardElevation="@dimen/_20sdp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/_30sdp"
        app:cardPreventCornerOverlap="true"
        >
        <ImageView
            android:layout_width="@dimen/_47sdp"
            android:layout_height="@dimen/_47sdp"
            android:src="@drawable/sheikh"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_10sdp"/>
