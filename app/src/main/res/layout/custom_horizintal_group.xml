<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_25sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/sheikh"
                android:id="@+id/custom_horizintal_group_iv"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_horizintal_group_tv_CenterName"
                android:layout_below="@id/custom_horizintal_group_iv"
                android:text="مركز الياسين لتعليم القرآن الكريم"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_margin="@dimen/_2sdp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_horizintal_group_tv_PhoneNumber"
                android:layout_below="@id/custom_horizintal_group_tv_CenterName"
                android:text="0594114029"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_margin="@dimen/_2sdp"
                android:layout_centerHorizontal="true"
                />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>

