<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_130sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_3sdp"
        android:elevation="@dimen/_25sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_height="@dimen/_165sdp"
        android:layout_width="@dimen/_110sdp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/custom_horizintal_student_iv"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/male"
                app:riv_mutate_background="true"
                android:scaleType="centerCrop"
                app:riv_oval="true"
                app:riv_corner_radius="@dimen/_200sdp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_horizintal_student_tv_CenterName"
                android:layout_below="@id/custom_horizintal_student_iv"
                android:text="Ahmed redwan abdelghafoor"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_horizintal_student_tv_PhoneNumber"
                android:layout_below="@id/custom_horizintal_student_tv_CenterName"
                android:text="0594114029"
                android:gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

