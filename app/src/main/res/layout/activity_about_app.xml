<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.otherActivity.AboutApp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_gravity="center_horizontal"
            android:text="حول التطبيق"
            android:textSize="@dimen/_25ssp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:id="@+id/aboutApp_tv_about"
            android:shadowColor = "#D8000000"
            android:shadowDx = "-2"
            android:shadowDy = "-5"
            android:shadowRadius = "20"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:padding="@dimen/_5sdp"
            app:cardElevation="@dimen/_20sdp"
            android:outlineAmbientShadowColor="@color/colorPrimaryDark"
            android:outlineSpotShadowColor="@color/colorPrimaryDark"
            app:cardCornerRadius="@dimen/_15sdp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="فكرة التطبيق"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:id="@+id/aboutApp_tv_AppIdea"
                    android:shadowColor = "#D8000000"
                    android:shadowDx = "-2"
                    android:shadowDy = "-5"
                    android:shadowRadius = "25"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="فكرة التطبيق"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:id="@+id/aboutApp_tv_AppIdeaText"
                    android:shadowColor = "#D8000000"
                    android:shadowDx = "-2"
                    android:shadowDy = "-5"
                    android:shadowRadius = "25"
                    />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
               android:layout_marginStart="@dimen/_8sdp"
               android:layout_marginEnd="@dimen/_8sdp"
               android:layout_marginTop="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"
            app:cardElevation="@dimen/_20sdp"
               android:layout_marginBottom="@dimen/_10sdp"
               app:cardCornerRadius="@dimen/_20sdp"
             >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="قام ببرمجة وتصميم التطبيق"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_18ssp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:id="@+id/aboutApp_tv_text"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:elevation="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        >
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:src="@drawable/mustafa"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius="@dimen/_150sdp"
                            android:layout_margin="@dimen/_10sdp"
                            app:riv_border_width="@dimen/_2sdp"
                            app:riv_border_color="#D1D4D6"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_10sdp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="مصطفى محمد الأسطل"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_18ssp"
                                android:textColor="@color/color_whigt"
                                android:textStyle="bold"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:id="@+id/aboutApp_tv_FirstName"
                                android:shadowColor = "#D8000000"
                                android:shadowDx = "-2"
                                android:shadowDy = "-5"
                                android:shadowRadius = "10"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="مبرمج تطبيقات أندرويد"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_18ssp"
                                android:textColor="@color/color_whigt"
                                android:textStyle="bold"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:id="@+id/aboutApp_tv_skill1"
                                android:shadowColor = "#D8000000"
                                android:shadowDx = "-2"
                                android:shadowDy = "-5"
                                android:shadowRadius = "10"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:src="@drawable/tel"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:id="@+id/aboutApp_iv_call1"/>
                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:src="@drawable/gmail"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:id="@+id/aboutApp_iv_gmail1"/>
                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:src="@drawable/facebook1"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:id="@+id/aboutApp_iv_facebook1"/>
                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:src="@drawable/github"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:id="@+id/aboutApp_iv_github1"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:elevation="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        >

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ahmed_ali"
                            app:riv_border_color="#D1D4D6"
                            app:riv_border_width="@dimen/_2sdp"
                            app:riv_corner_radius="@dimen/_150sdp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_10sdp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="أحمد علي اليعقوبي"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_18ssp"
                                android:textColor="@color/color_whigt"
                                android:textStyle="bold"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:id="@+id/aboutApp_tv_secondName"
                                android:shadowColor = "#D8000000"
                                android:shadowDx = "-2"
                                android:shadowDy = "-5"
                                android:shadowRadius = "10"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="مبرمج تطبيقات أندرويد"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_18ssp"
                                android:textColor="@color/color_whigt"
                                android:textStyle="bold"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:id="@+id/aboutApp_tv_skill2"
                                android:shadowColor = "#D8000000"
                                android:shadowDx = "-2"
                                android:shadowDy = "-5"
                                android:shadowRadius = "10"

                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:src="@drawable/tel"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:id="@+id/aboutApp_iv_call2"/>
                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:src="@drawable/gmail"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:id="@+id/aboutApp_iv_gmail2"/>
                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:src="@drawable/facebook1"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:id="@+id/aboutApp_iv_facebook2"/>
                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:src="@drawable/github"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:id="@+id/aboutApp_iv_github2"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:elevation="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"
                        >
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:src="@drawable/ahmed_abd"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius="@dimen/_150sdp"
                            android:layout_margin="@dimen/_10sdp"
                            app:riv_border_width="@dimen/_2sdp"
                            app:riv_border_color="#D1D4D6"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_10sdp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="أحمد رضوان عبد الغفور"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_18ssp"
                                android:textColor="@color/color_whigt"
                                android:textStyle="bold"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:id="@+id/aboutApp_tv_ThirdName"
                                android:shadowColor = "#D8000000"
                                android:shadowDx = "-2"
                                android:shadowDy = "-5"
                                android:shadowRadius = "10"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="مبرمج تطبيقات أندرويد"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:textSize="@dimen/_18ssp"
                                android:textColor="@color/color_whigt"
                                android:textStyle="bold"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:id="@+id/aboutApp_tv_skill3"
                                android:shadowColor = "#D8000000"
                                android:shadowDx = "-2"
                                android:shadowDy = "-5"
                                android:shadowRadius = "10"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:src="@drawable/tel"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:id="@+id/aboutApp_iv_call3"/>
                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:src="@drawable/gmail"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:id="@+id/aboutApp_iv_gmail3"/>
                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:src="@drawable/facebook1"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:id="@+id/aboutApp_iv_facebook3"/>
                                <ImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:src="@drawable/github"
                                    android:layout_margin="@dimen/_3sdp"
                                    android:id="@+id/aboutApp_iv_github3"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>



        </androidx.cardview.widget.CardView>


    </LinearLayout>


</ScrollView>