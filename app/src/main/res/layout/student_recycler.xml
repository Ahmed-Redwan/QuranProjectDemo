<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/_50sdp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/student_recycler_day"
                android:text="الأربعاء"
                android:textSize="@dimen/_10ssp"
                android:background="@color/colorPrimary"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@android:color/white"
                android:shadowColor = "#D8000000"
                android:shadowDx = "-2"
                android:shadowDy = "-5"
                android:shadowRadius = "10"
                />
            <TextView
                android:layout_width="@dimen/_65sdp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/student_recycler_date"
                android:text="25/12/2000"
                android:textSize="@dimen/_10ssp"
                android:background="@color/colorPrimary"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@android:color/white"
                android:shadowColor = "#D8000000"
                android:shadowDx = "-2"
                android:shadowDy = "-5"
                android:shadowRadius = "10"
                />
            <TextView
                android:layout_width="@dimen/_100sdp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/student_recycler_save"
                android:text="آل عمران(100-200)"
                android:textSize="@dimen/_10ssp"
                android:background="@color/colorPrimary"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@android:color/white"
                android:shadowColor = "#D8000000"
                android:shadowDx = "-2"
                android:shadowDy = "-5"
                android:shadowRadius = "10"
                />
            <TextView
                android:layout_width="@dimen/_100sdp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/student_recycler_review"
                android:text="آل عمرا(100-100)"
                android:textSize="@dimen/_10ssp"
                android:background="@color/colorPrimary"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@android:color/white"
                android:shadowColor = "#D8000000"
                android:shadowDx = "-2"
                android:shadowDy = "-5"
                android:shadowRadius = "10"
                />
            <TextView
                android:layout_width="@dimen/_73sdp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/customRowReports_tv_numOfSavePages"
                android:text="@string/_0"
                android:textSize="@dimen/_10ssp"
                android:background="@color/colorPrimary"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@android:color/white"
                android:shadowColor = "#D8000000"
                android:shadowDx = "-2"
                android:shadowDy = "-5"
                android:shadowRadius = "10"
                />
            <TextView
                android:layout_width="@dimen/_73sdp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:id="@+id/customRowReports_tv_numOfReviewPages"
                android:text="@string/_0"
                android:textSize="@dimen/_10ssp"
                android:background="@color/colorPrimary"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@android:color/white"
                android:shadowColor = "#D8000000"
                android:shadowDx = "-2"
                android:shadowDy = "-5"
                android:shadowRadius = "10"
                />


        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>




